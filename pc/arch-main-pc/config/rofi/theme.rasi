/**
 * ROFI Metro theme
 * w/ pywal support
 *
 * Tiles not yet working(!!!)
 */

@import "~/.cache/wal/colors-rofi-dark.rasi"

* {
	accent: #FFFFFF;
	foreground: @accent;
	background: rgba(0, 0, 0, 0.2);
	transparent: rgba(0, 0, 0, 0);
	normal-background: @transparent;
	normal-foreground: @foreground;
	urgent-foreground: @foreground;
	active-foreground: @foreground;
	selected-normal-foreground: @background;
	selected-urgent-background: @foreground;
	selected-urgent-foreground: @background;
	selected-active-foreground: @foreground;
	alternate-normal-background: @transparent;
	alternate-normal-foreground: @foreground;
	alternate-active-background: @selected-normal-background;
	alternate-active-foreground: @active-foreground;
	alternate-urgent-background: @transparent;
	alternate-urgent-foreground: @urgent-foreground;
	border-color: @background;
	separatorcolor: @transparent;
	background-color: @transparent;
	spacing: 10;
	text-color: @active-foreground;
	font: "Noto Sans 12";
}

#window {
	fullscreen: true;
	background-color: @active-background;
	padding: 6%;
}

#mainbox {
	children: [
		inputbar,
		message,
		container-start-screen
	];
}

#container-start-screen {
	children: [
		container-metro-tiles,
		listview
	];
	orientation: horizontal;
}

#container-metro-tiles {
	children: [
		button-tile-wide-email,
		button-tile-wide-firefox,
		container-tile-row-first,
		button-tile-wide-mpv,
		container-tile-row-second
	];
	orientation: vertical;
	expand: false;
	width: 300px;
	padding: 10px 0 0 0;
}

#button-tile-wide-email {
	expand: false;
	padding: 100px 10px 10px 10px;
	content: "Thunderbird";
	background-image: url("./metro/tiles/regular/email.png", both);
	background-color: #3a9ec8;
	action: "kb-custom-1";
}

#button-tile-wide-firefox {
	expand: false;
	padding: 100px 10px 10px 10px;
	content: "Firefox";
	background-image: url("./metro/tiles/regular/firefox.png", both);
	background-color: #ea8600;
	action: "kb-custom-2";
}

#container-tile-row-first {
	children: [
		button-tile-small-steam,
		button-tile-small-discord
	];
	orientation: horizontal;
	width: 300px;
	expand: false;
}

#button-tile-small-steam {
	padding: 100px 10px 10px 10px;
	content: "Steam";
	background-image: url("./metro/tiles/small/steam.png", both);
	background-color: #0c4076;
	action: "kb-custom-3";
}

#button-tile-small-discord {
	padding: 100px 10px 10px 10px;
	content: "Discord";
	background-image: url("./metro/tiles/small/discord.png", both);
	background-color: #5865F2;
	action: "kb-custom-4";
}

#button-tile-wide-mpv {
	expand: false;
	padding: 100px 10px 10px 10px;
	content: "MPV";
	background-image: url("./metro/tiles/regular/mpv.png", both);
	background-color: #672168;
	action: "kb-custom-5";
}

/* TILES WITH PYWAL COLORS */
#container-tile-row-second {
	children: [
		button-tile-small-code,
		button-tile-small-terminal
	];
	orientation: horizontal;
	width: 300px;
	expand: false;
}

#button-tile-small-code {
	padding: 100px 10px 10px 10px;
	content: "Code";
	text-color: @active-foreground;
	background-image: url("./metro/tiles/small/code.png", both);
	background-color: @selected-normal-background;
	action: "kb-custom-6";
}

#button-tile-small-terminal {
	padding: 100px 10px 10px 10px;
	content: "Terminal";
	background-image: url("./metro/tiles/small/terminal.png", both);
	background-color: @urgent-background;
	action: "kb-custom-7";
}

#message {
	border: 0px;
	border-color: @separatorcolor;
	padding: 10 1% 10;
}

#textbox {
	text-color: @foreground;
}

#textbox-prompt-colon {
    expand: false;
    str: "";
    margin: 0px;
    text-color: @normal-foreground;
}

#listview {
	columns: 7;
	fixed-columns: true;
	spacing: 10px;
	padding: 10px 0% 10px;
    border: 0px;
}

#element {
    orientation: vertical;
	border-color: @selected-normal-background;
	padding: 10px 10px 10px;
	width: 20px;
	expand: false;
	background-color: @selected-active-background;
}

#element-text {
	margin: 10px 0px 0px 0px;
    text-color: inherit;
}

#element-icon {
	horizontal-align: 0.5;
    size: 60px;
	padding: 5px;
}

#element.normal.normal {
	background-color: @selected-active-background;
	text-color: @normal-foreground;
}

#element.normal.urgent {
	background-color: @urgent-background;
	text-color: @urgent-foreground;
}

#element.normal.active {
	background-color: @selected-active-background;
	text-color: @active-foreground;
}

// Highlighted item
#element.selected.normal {
	background-color: @selected-normal-background;
	text-color: @accent;
}

#element.selected.urgent {
	background-color: @selected-urgent-background;
	text-color: @selected-urgent-foreground;
}

#element.selected.active {
	background-color: @selected-active-background;
	text-color: @selected-active-foreground;
}

#element.alternate.normal {
	background-color: @selected-active-background;
	text-color: @alternate-normal-foreground;
}

#element.alternate.urgent {
	text-color: @alternate-urgent-foreground;
}

#element.alternate.active {
	text-color: @alternate-active-foreground;
}

#scrollbar {
	width: 0px;
	border: 0;
	handle-width: 8px;
	padding: 0;
}

#sidebar {
	border: 2px 0px 0px;
	border-color: @separatorcolor;
}

#button.selected {
	background-color: @selected-normal-background;
	text-color: @selected-normal-foreground;
}

#inputbar {
    children: [
		textbox-custom,
		entry,
		container-name,
		user-icon
	];
	spacing: 20;
	text-color: @normal-foreground;
	padding: 0 15px 0px 0;
	margin: 0 0 70px 0;
}

#case-indicator {
	spacing: 0;
	text-color: @normal-foreground;
}

#entry {
	font: "Noto Sans 24";
	text-color: @normal-foreground;
}

#textbox-custom {
    expand: true;
	content: "Start";
	font: "Noto Sans 34";
	text-color: @normal-foreground;
}

#prompt, button {
	spacing: 0;
	text-color: @normal-foreground;
}

#container-name {
	children: [
		textbox-firstname,
		textbox-secondname
	];
	orientation: vertical;
    spacing: 0px;
    expand: false;
}

#textbox-firstname {
	horizontal-align: 1;
	font: "Noto Sans 17";
	str: "Dartegnian";
	text-color: @normal-foreground;
}

#textbox-secondname {
	horizontal-align: 1;
	str: "Velarde";
	text-color: @normal-foreground;
}

#user-icon {
	expand: false;
	padding: 0px;
	width: 50px;
	height: 10px;
	margin: 0 0 13px 0;
	border: 0px;
	background-image: url("/usr/share/sddm/faces/dartegnian.face.icon", both);
}
